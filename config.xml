
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "ee.efley.dealhouse"
        versionCode="11" 
        version   = "1.0.1">

    <!-- versionCode is optional and Android only -->

    <name>Dealhouse</name>

    <description>
       Dealhouse
    </description>

    <author href="https://www.efley.ee" email="kristo@efley.ee">
        Efley
    </author>
    
    <access origin="*" />
    
    <preference name="phonegap-version" value="2.7.0" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce" 	value="false" />
    
    <preference name="load-url-timeout" value="50000" />
    
    <gap:plugin name="ChildBrowser" />
	<gap:plugin name="Analytics" /> <!-- latest release -->
    
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
    
    <icon src="assets/icon-iphone.png" gap:platform="ios" width="57" height="57" />
    <icon src="assets/icon-ipad-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="assets/icon_iphone2x.png" gap:platform="ios" width="114" height="114" />
    
    <icon src="assets/icon-android.png" gap:platform="android" gap:density="ldpi" />
	<icon src="assets/icon-android.png" gap:platform="android" gap:density="mdpi" />
	<icon src="assets/icon-android.png" gap:platform="android" gap:density="hdpi" />
	<icon src="assets/icon-android.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/Default@2x.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="assets/Default@2x.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="assets/Default@2x.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="assets/Default@2x.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/Default.png"    	gap:platform="ios"	width="320" height="480" />
    <gap:splash src="assets/Default@2x.png" 	gap:platform="ios"	width="640" height="960" />
    <gap:splash src="assets/Default-568h@2x.png" 			gap:platform="ios"	width="640" height="1136" />
    
    <gap:splash src="assets/splash/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="assets/splash/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    
	

</widget>